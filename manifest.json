{
    "name": "Amazon Drive",
    "version": "1.0.0",
    "description": "Allow video playback over 20 minutes",

    "icons": {
        "48": "img/icon48.png",
        "128": "img/icon128.png"
    },
    "content_scripts": [{
        "matches": ["*://*.amazon.ca/clouddrive/*", "*://*.amazon.com/clouddrive/*", "*://*.amazon.com/photos/*"],
        "js": ["js/jquery.js", "js/background.js"]
    }],
    "manifest_version": 2
}
